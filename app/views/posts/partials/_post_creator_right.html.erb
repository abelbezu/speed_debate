<li id = "creator-right" class = "post-right">
  <div class = "col-md-10 timeable_test  col-md-push-2">
    <div class="rounded-edges panel panel-default">
      <div class="panel-body">
        <div class = "row">

        </div>
        <div class = "row">
          <div class="col-md-12">
            <div class="post-box-profile-img-container-right">

                 <%= image_tag("default.png", :alt => "+", :class => "profile-pic-container")%>

            </div>
            <div class="post-box-profile-info-container-right">
              <div class="post-box-profile-info">

                <span class="profile-info-name"><%= Account.find(session[:user_id]).display_name%></span>
              </div>
              <div class="profile-info-description">

              </div>
            </div>
          </div>
        </div>
        <div class = "row" style = "margin-top: 10px;">
          <div class = "argument-text col-md-12">

            <%= form_for(:post,  :remote => true, :url => {:controller => 'posts',  :action => 'create'}, html: {:id => "post_input_form"}) do |f| %>
            <%= f.hidden_field :debate_id, :value => id %>
            <%= f.fields_for :content_attributes do |o|%>
            <div class = "reply-box">
              <div id = "reply_container" class="form-group">    
               <%= o.text_area(:content_body, :rows => '3',:class => 'reply-text-area form-control', :placeholder => "Your turn", :id => "post_input_box") %>
               <div id = "message_box">
               </div>
             </div> 
           </div>
           <%end%>
           <div class = "reply-btn">
            <%= submit_tag("Reply", :id => "post_submit_btn", :class => "btn btn-success btn-sm pull-right") %>



          </div>

        </div>
        <% end%>
      </div>
      <div class = "row social-icons-box">
        <div class ="col-md-12">

        </div>
      </div>
      <div class = "row">

      </div>

    </div>
  </div>
</div>
<div class = "col-md-2 col-md-pull-10">
</div>
<div style = "clear:both"></div>
</li>
<script type="text/javascript">
var t = new TextInput("post_input_box");

t.enter_submitable("post_input_form", "post_submit_btn", "reply_container", "", "", "push");
var creator = new CharacterCounter("post_input_box", "message_box", 500);
  approaching_msg = "You are about to exceed the character limit. Please keep the topic concise";
  exceeded_msg = "You've exceeded the character limit. Still have more to say? Please add it in the Description"
  c.notifiable(20, approaching_msg, exceeded_msg);

</script>