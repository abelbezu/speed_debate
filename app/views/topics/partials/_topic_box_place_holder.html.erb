	<span style = "color: red;" id = ""><i style = "margin: 10px 45%;" class="fa fa-spinner fa-pulse fa-spin fa-3x fa-fw margin-bottom"></i></span>

</div> 
 <div class = "small_devider"></div>
 <div class = "small_devider"></div>

<script>


append_topic_box = function(data)
{
	
	$("#topic_creator_container").empty();
	$("#topic_creator_container").append(data);
}

$("#topic_box_place_holder").focus(function(){
	$("#topic_box_place_holder").remove();
	$("#loading_box").removeClass("hidden");
    var topic_box_request = new AjaxHandler("none", "<%= root_url%>"+"ajax_calls/topic_box_request", "POST", {} , append_topic_box);
                topic_box_request.make_call();
});
</script>