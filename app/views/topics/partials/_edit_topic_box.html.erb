<div class="stepwizard">
	<div class="stepwizard-row setup-panel">
		<div class="stepwizard-step">
			<a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
			<p>Title</p>
		</div>
		<div class="stepwizard-step">
			<a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
			<p>Sides</p>
		</div>
		<div class="stepwizard-step">
			<a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
			<p>Setup</p>
		</div>		
	</div>
</div>
<%= form_for(topic, :role => "form") do |f| %>
<div class="row setup-content" id="step-1">
	<div class="col-xs-12">
		<div class="col-md-12">
			<div class="form-group">
				<label class="control-label">Title</label>
				<%= f.text_field(:topic_sentence, maxlength: "100",  type: "text", required: "required", :class => "form-control")%>

			</div>
			<div class="form-group">
				<label class="control-label">Description</label>

				<%= f.text_area(:description, maxlength: "500",  type: "text", :class => "form-control")%>
			</div>
			<div class="modal-footer">       
				<div id = "users_modal_wait" style ="height: 30px;" class = "nextBtn topic_button topic_create_split_right col-xs-12 col-md-12">
					Next
				</div>

				<div style = "clear:both">
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row setup-content" id="step-2">
	<div class="col-xs-12">
		<div class="col-md-12">

			<div class="form-group">
				<label class="control-label">Company Name</label>
				<%= f.text_field(:left_side_topic, maxlength: "100",  type: "text", :class => "form-control")%>
			</div>
			<div class="form-group">
				<label class="control-label">Company Address</label>
				<%= f.text_field(:right_side_topic, maxlength: "100",  type: "text",  :class => "form-control")%>
			</div>
			<div class="modal-footer">       
				<div id = "users_modal_wait" style ="height: 30px;" class = "nextBtn topic_button topic_create_split_right col-xs-12 col-md-12">
					Next
				</div>

				<div style = "clear:both">
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row setup-content" id="step-3">
	<div class="col-xs-12">
		

			<div class="modal-footer">
				<div style ="height: 30px;" id = "reveal_description_button" class = "topic_button topic_create_split_left col-xs-12 col-md-6">
					Cancel
				</div>
				

					<%= f.submit("Submit", :style => "border: 0px solid transparent; background: transparent; height: 30px;", :class => "topic_button topic_create_split_right col-xs-12 col-md-6" )%>


				<div style = "clear:both">
				</div>
			</div>

		
	</div>
</div>
<% end %>

