<!DOCTYPE html>
<html>
<head>
  <title>Toucan | <%= @page_title || "Home" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag Sync.adapter_javascript_url %>
  <%= csrf_meta_tags %>
</head>
<body class = "wall">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if @page_title == 'Admin'%>
            <a class="navbar-brand" href="#">Admin</a>
        <% else %>
            <a class="navbar-brand" href="#">Toucan</a>
        <% end %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"> <%= link_to("Home", {:controller => "topics", :action =>"test"})%></li>
          <li><a href="#">Link</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
              <li class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        </ul>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>

        <ul class="nav navbar-nav navbar-right">
          <% if session[:logged_in]%>
          <li><div class = "navbar-profile-pic-container"><%= image_tag(session[:picture], :size => '40x40', :alt => '+', :class => "navbar-profile-pic")%>
          </div></li>
          <li class="dropdown">
            <div class = " navbar-info-container">
              <%= link_to( session[:name], {:controller => 'access', :action => 'logout'}, :class => "navbar-info-link", :class => "dropdown-toggle", 'data-toggle'=> "dropdown", :role => "button", 'aria-expanded' =>"false" )%>
              <ul class="navbar-profile-info-container-dd dropdown-menu" role="menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li><a href="#">Separated link</a></li>
              </ul>
            </div>
          </li>
          <li>

            <%= link_to("Log Out", {:controller => 'access', :action => 'logout'}, :class => "navbar-info-link")%>
          </li>
          <% else %>
          <li><%= link_to("Sign Up", {:controller => 'account', :action => 'index'}, :class => "navbar-info-link")%></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Log In <span class="caret"></span></a>
            <div class="navbar-login-container-dd dropdown-menu" role="menu">
              <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-2">
                  <%= form_for(:account, :url => {:controller => "access", :action => 'attempt_login'}, :role => 'form') do |f| %>
                  <h2>Log In</h2>
                  <hr class="colorgraph">

                  <div class="form-group">
                    <%= f.text_field(:email, :class => "form-control", :placeholder => "Email Address", :tabindex =>'4')%>
                  </div>

                  <div class="form-group">
                    <%= f.password_field(:password, :class => "form-control", :placeholder => "Password", :tabindex =>'5')%>
                  </div>




                  <%= f.check_box(:rememeber_me)  %>  &nbsp; Remember Me
                </br>
              </br>
              <%= link_to("Forgot your password?", {:controller => 'access', :action => 'forgot_password'}) %>
              <hr class="colorgraph">

              <div class = "row">
                <div class = "col-md-6">
                  <%= submit_tag("Log In", :class => "btn btn-primary btn-block", :tabindex => '7') %> 
                
              </div>
                <div class = "col-md-6">
                  <%= link_to("Sign Up", {:controller => 'accounts', :action => 'index'}, :class => 'btn btn-success btn-block') %>
                </div>
                <% end %>
          </div>
          </div>
        </div>
      </div>
    </li>
    <% end %>



  </ul>
</div>
</div><!-- /.navbar-collapse -->
</div><!-- /.container-fluid -->
</nav>



<%= yield %>

</body>
</html>
