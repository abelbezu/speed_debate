
<div class = "container-fluid login-container-box">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <h2>Log in</h2>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <hr class="colorgraph">
      <div style = "text-align: center; margin-bottom: 20px;">
      <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <%= link_to "Facebook", account_omniauth_authorize_path(:facebook), :class => "btn btn-info btn-block" %>
              
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <a href="#" class="btn btn-info btn-block">Google</a>
            </div>
          </div>
          
      </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
       <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email Address", :tabindex =>'4' %>
    </div>

    <div class="form-group">
       <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password", :tabindex =>'4' %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box(:remember_me)  %>  &nbsp; Remember Me
    </div>
    <% end -%>
    </br>
  </br>
    <div class="actions">
      <%= f.submit "Log in", :class => "btn btn-primary btn-block ", :tabindex => '7' %>
      </br>


<%= link_to("Sign Up", new_account_registration_path, :class => 'btn btn-success btn-block') %>
    </div>
    <% end %>

    
  </div>
  </div>
</div>